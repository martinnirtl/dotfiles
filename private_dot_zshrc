# ATTENTION do not edit this file directly (e.g. `vi ~/.zshrc`)

# CUSTOM ENVVARS
export DEV=$HOME/Development
export DEV_TOOLS=$DEV/tools
export DEV_TOOLS_BIN=$DEV/tools/bin
export BAT_THEME="Monokai Extended" # run `bat --list-themes` to get preview on themes
#export DOCKER_HOST="unix://$HOMEe/.local/share/containers/podman/machine/podman-machine-default/podman.sock"
#export FZF_BASE="$HOMEBREW_PREFIX/bin/fzf"
export GOPATH="$DEV_TOOLS/go"
# TODO look for better way - something that works automatically after brew install
export ZSH_COMPLETIONS_CACHE="$HOME/.oh-my-zsh/cache/completions"

# PATH EXTENSIONS
GOBINS="$GOPATH/bin"
KREW="$HOME/.krew/bin"
export PATH="$PATH:$GOBINS:$KREW:$DEV_TOOLS_BIN"

# ZSH SETTINGS
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="" # using starship (see below)
plugins=(aliases copyfile docker-compose history kubectl terraform z zsh-autosuggestions zsh-syntax-highlighting) # removed `direnv docker fzf git`
source $ZSH/oh-my-zsh.sh

eval "$(starship init zsh)" # https://starship.rs/

# ALIASES
alias cat="bat"
alias ccat="cat"
alias cpf="copyfile"
alias mp="multipass"
alias zshconfig="chezmoi edit --apply ~/.zshrc"

# AUTOCOMPLETIONS
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C $HOMEBREW_PREFIX/bin/vault vault
complete -o nospace -C $HOMEBREW_PREFIX/bin/terraform terraform

# 1PASSWORD PLUGINS (https://developer.1password.com/docs/cli/shell-plugins/)
# source $HOME/.config/op/plugins.sh
