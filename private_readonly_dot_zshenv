# ATTENTION this file is managed by chezmoi

# UPDATER VARIABLES
if [[ -f "$HOME/.config/updaterenv" ]]; then
  source $HOME/.config/updaterenv
fi

# CUSTOM VARIABLES
export COMPLETIONS="$HOME/.config/completions"

export AWS_PROFILE=default
export AWS_DEFAULT_REGION=eu-central-1
export BAT_THEME="Monokai Extended" # run `bat --list-themes` to get preview on themes
export DEV_TOOLS=$HOME/Development/tools
#export DOCKER_HOST="unix://$HOMEe/.local/share/containers/podman/machine/podman-machine-default/podman.sock"
#export FZF_BASE="$HOMEBREW_PREFIX/bin/fzf"
export GOPATH="$DEV_TOOLS/go"
export VOLTA_HOME="$HOME/.volta"

# PATH EXTENSIONS
BREW=/opt/homebrew/bin
CARGO="$HOME/.cargo/bin"
DEV_TOOLS_BIN=$DEV_TOOLS/bin
GOBINS="$GOPATH/bin"
KREW="$HOME/.krew/bin"
RANCHER_DESKTOP="$HOME/.rd/bin"
VOLTA="$VOLTA_HOME/bin"
export PATH="$BREW:$CARGO:$DEV_TOOLS_BIN:$GOBINS:$KREW:$RANCHER_DESKTOP:$VOLTA:$PATH"
