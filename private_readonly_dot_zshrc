# ATTENTION this file is managed by chezmoi

# ZSH SETTINGS
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="" # using starship (see below)
plugins=(aliases copyfile docker-compose history kubectl multipass terraform z zsh-autosuggestions zsh-syntax-highlighting) # removed `direnv docker fzf git`
source $ZSH/oh-my-zsh.sh

eval "$(starship init zsh)" # https://starship.rs/

# ALIASES
alias cpf="copyfile"
alias chezcode="code $(chezmoi source-path)"
alias kztl="k0sctl"
alias pip="pip3"
alias python="python3"

# https://formulae.brew.sh/formula/zsh-completions
# FPATH=$(brew --prefix)/share/zsh-completions:$FPATH
FPATH=$(brew --prefix)/share/zsh/site-functions:$FPATH
# fpath=(~/.config/completions $fpath)

# AUTOCOMPLETIONS
autoload -Uz compinit; compinit
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C $HOMEBREW_PREFIX/bin/vault vault
complete -o nospace -C $HOMEBREW_PREFIX/bin/terraform terraform

# rm -f ~/.zcompdump; compinit

# COLLECTION OF TO-BE-SOURCED
source $HOME/.config/source.sh

# CHEZMOI APPLY
source $HOME/.config/chezmoi-apply.sh
