# ATTENTION do not edit this file directly (e.g. `vi ~/.zshrc`)

# ZSH SETTINGS
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="" # using starship (see below)
plugins=(aliases copyfile docker-compose history kubectl multipass terraform z zsh-autosuggestions zsh-syntax-highlighting) # removed `direnv docker fzf git`
source $ZSH/oh-my-zsh.sh

eval "$(starship init zsh)" # https://starship.rs/

# ALIASES
alias cpf="copyfile"
alias kztl="k0sctl"
alias zshconfig="chezmoi edit --apply ~/.zshrc"
alias python="python3"
alias pip="pip3"

# AUTOCOMPLETIONS
autoload -Uz compinit; compinit
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C $HOMEBREW_PREFIX/bin/vault vault
complete -o nospace -C $HOMEBREW_PREFIX/bin/terraform terraform

# 1PASSWORD PLUGINS (https://developer.1password.com/docs/cli/shell-plugins/)
# source $HOME/.config/op/plugins.sh

# CHEZMOI APPLY
source $HOME/.config/chezmoi-apply.sh
